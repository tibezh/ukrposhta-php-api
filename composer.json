{
    "name": "tibezh/ukrposhta-php-sdk",
    "type": "library",
    "description": "Contains integration with Ukrposhta service.",
    "keywords": ["Ukrpostha", "Ukrpostha PHP", "Ukrpostha PHP SDK", "Ukrpostha SDK", "Ukrpostha PHP API", "Ukrpostha API"],
    "license": "MIT",
    "authors": [
        {
            "name": "Ivan Tibezh",
            "email": "ivan.tbzh@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1.0",
        "guzzlehttp/guzzle": "^7.8 || ^7.7",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.40"
    },
    "autoload": {
        "psr-4": {
            "Ukrposhta\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ukrposhta\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "phpstan": "@php vendor/bin/phpstan analyse",
        "test": "@php vendor/bin/phpunit",
        "test-coverage-html": "@php vendor/bin/phpunit --coverage-html .phpunit.cache",
        "lint": "@php vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --diff --dry-run --using-cache=no",
        "lint-fix": "@php vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php"
    }
}
